{
  "name": "node-core",
  "version": "1.0.0",
  "description": "Node Core",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "dev:inspect": "nodemon --inspect src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "changelog": "auto-changelog --template src/templates/changelog.hbs -p && git add CHANGELOG.md",
    "changelog:debug": "auto-changelog --template src/templates/changelog.hbs -p --template json --output changelog-data.json",
    "lint": "tslint -p tsconfig.json",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "typeorm:version": "npm run typeorm version",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show",
    "entity:create": "npm run typeorm entity:create -- -n",
    "subscriber:create": "npm run typeorm subscriber:create -- -n",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log",
    "schema:drop": "npm run typeorm schema:drop",
    "cache:clear": "npm run typeorm cache:clear",
    "query": "npm run typeorm query"
  },
  "author": "Magneto365",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.9.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.8",
    "axios": "^0.19.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "i18next": "^19.3.3",
    "i18next-express-middleware": "^1.9.1",
    "i18next-node-fs-backend": "^2.1.3",
    "lodash": "^4.17.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1-alpha.2",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "0.2.24",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/multer": "^1.4.3",
    "@types/node": "^8.10.59",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.1",
    "auto-changelog": "^1.16.2",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "3.3.0",
    "tslint": "^6.1.0",
    "typescript": "3.3.3333"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "changelog",
    "unreleased": true,
    "commitLimit": false,
    "issueUrl": "http://jira.user.com.br/browse/{id}",
    "replaceText": {
      "[Ff]eature:": "",
      "[Ff]ix:": "",
      "[Bb]reak:": "",
      "^ #(.{6})\\s": "[$1](https://app.clickup.com/t/$1) - "
    },
    "includeBranch": [
      "develop",
      "master"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && pretty-quick --staged",
      "pre-push": "npm run lint && npm test"
    }
  }
}
